#include <iostream>
#include <string>
#include <vector>
#include <bitset>

int main() {
    std::string palabra = "tengounavacalechera"; // Ejemplo de una palabra
    std::vector<std::bitset<14>> gruposDe14Bits;

    size_t i = 0;
    while (i < palabra.length()) {
        std::string subcadena = palabra.substr(i, 14);

        // Rellena con ceros si la subcadena es mÃ¡s corta que 14 caracteres
        while (subcadena.length() < 14) {
            subcadena += "0";
        }

        std::bitset<14> bits(subcadena);
        gruposDe14Bits.push_back(bits);

        i += 14;
    }

    // Imprime los grupos de 14 bits
    for (const std::bitset<14>& grupo : gruposDe14Bits) {
        std::cout << "Grupo de 14 bits: " << grupo << " (Valor operable: " << grupo.to_ulong() << ")" << std::endl;
    }

    return 0;
}
