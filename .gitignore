#include <iostream>
#include <string>
#include <vector>
#include <bitset>
using namespace std;

int main() {
    string palabra = "tengounavacalechera"; // Ejemplo de una palabra
    vector<bitset<14>> gruposDe14Bits;

    // Itera a trav√©s de la palabra para obtener grupos de 14 bits
    for (size_t i = 0; i + 13 < palabra.length(); i += 14) {
        string subcadena = palabra.substr(i, 14);
        bitset<14> bits(subcadena);
        gruposDe14Bits.push_back(bits);
    }

    // Imprime los grupos de 14 bits
    for (const bitset<14>& grupo : gruposDe14Bits) {
        cout << "Grupo de 14 bits: " << grupo << " (Valor operable: " << grupo.to_ulong() << ")" << endl;
    }

    return 0;
}
